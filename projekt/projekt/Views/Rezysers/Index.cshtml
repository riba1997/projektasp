@model IEnumerable<projekt.Models.Rezyser>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImieNazwisko)
            </th>
            <th>Filmy</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImieNazwisko)
            </td>
            <td>
                @foreach (var s in item.Films)
                {
                    @s.Tytull <br />
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"class="btn btn-info">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id"class="btn btn-dark">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id"class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
